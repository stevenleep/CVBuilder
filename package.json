{
  "name": "lcedit",
  "version": "1.0.0",
  "private": true,
  "description": "一个完整的、工业级的低代码/无代码平台框架",
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter='./packages/**' run build",
    "dev": "pnpm -r --parallel run dev",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "lint": "eslint packages --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "type-check": "pnpm -r run type-check",
    "test": "pnpm -r run test",
    "test:coverage": "pnpm -r run test:coverage",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lcedit/lcedit.git"
  },
  "bugs": {
    "url": "https://github.com/lcedit/lcedit/issues"
  },
  "homepage": "https://lcedit.dev",
  "keywords": [
    "low-code",
    "no-code",
    "visual-builder",
    "drag-drop",
    "editor",
    "framework"
  ],
  "author": "LCEdit Team",
  "license": "MIT"
}

